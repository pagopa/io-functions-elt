{
  "name":"profile",
  "type":"record",
  "namespace": "dto",
  "doc":"Schema for cosmos api container 'profiles'",
  "fields":[
    {
      "name": "id",
      "type": "string"
    },
    {
      "name":"version",
      "type":"int",
      "default":0
    },
    {
      "name": "timestamp",
      "type": "long",
      "logicalType": "timestamp-millis",
      "default": 0
    },
    {
      "name":"blockedInboxOrChannels",
      "doc": "Contains blocked channels per each service. This info remains for backward compatibility only, it has been replaced with service-preferences data",
      "type":{
        "type": "map",
        "values":{
          "type": "array",
          "items": {
            "type":"enum",
            "name":"BlockedInboxOrChannelEnum",
            "symbols":[
              "EMAIL",
              "WEBHOOK",
              "INBOX"
            ]
          }
        }
      },
      "default" : {}
    },
    {
      "name":"userPDVId",
      "type": "string"
    },
    {
      "name": "isEmailEnabled",
      "type": "boolean"
    },
    {
      "name": "isEmailValidated",
      "type": "boolean"
    },
    {
      "name": "isInboxEnabled",
      "type": "boolean"
    },
    {
      "name": "isWebhookEnabled",
      "type": "boolean"
    },
    {
      "name":"lastAppVersion",
      "type": "string",
      "default": "UNKNOWN"
    },
    {
      "name":"pushNotificationsContentType",
      "type":{
        "name":"PushNotificationsContentTypeEnum",
        "type":"enum",
        "symbols":[
          "UNSET",
          "FULL",
          "ANONYMOUS"
        ]
      },
      "default": "UNSET"
    },
    {
      "name": "reminderStatus",
      "type": {
        "type":"enum",
        "name":"ReminderStatus",
        "symbols":[
          "ENABLED",
          "DISABLED",
          "UNSET"
        ]
      },
      "default": "UNSET"
    },
    {
      "name":"servicePreferencesSettings",
      "type": {
        "name":"ServicesPreferencesMode",
        "type": "record",
        "fields":[
          { 
            "name":"mode",
            "type":{
              "type":"enum",
              "name":"ServicesPreferencesModeEnum",
              "symbols":["AUTO","MANUAL","LEGACY"]
            }
          },
          {
            "name":"version",
            "doc": "A version of -1 refers to a LEGACY setting",
            "type":"int"
          }
        ]
      }
    }
  ]
}
